@{
}
@model Student;

<h1> Update Student </h1>

<form action="UpdateStudent" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>ID</label>
        <input asp-for="Id" class="form-control" hidden/>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GPA">GPA</label>
        <input asp-for="GPA" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="Html.GetEnumSelectList(typeof(Course))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="AdmissionDate">Admission Date</label>
        <input asp-for="AdmissionDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="reset" onClick="history.back()"class="btn btn-secondary">Cancel</button>
</form>