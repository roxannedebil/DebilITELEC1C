@{
}
@model Instructor;

<h1> Update Instructor </h1>

<form action="UpdateInstructor" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>ID</label>
        <input asp-for="Id" class="form-control" hidden />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" asp-items="Html.GetEnumSelectList(typeof(IsTenured))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"></select>
    </div> 

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="reset" onClick="history.back()" class="btn btn-secondary">Cancel</button>
</form>